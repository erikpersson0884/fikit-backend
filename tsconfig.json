{
  "compilerOptions": {
    "target": "ES2020", // or ES6/ES2020 depending on the Node version
    "module": "commonjs", // CommonJS for Node.js
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
